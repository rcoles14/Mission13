@model IEnumerable<string>
<h6>Select a Team</h6>
<div class="gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-selectedTeam="" class="btn @(ViewBag.Selected == null ? "btn-primary" : "btn-outline-secondary") btn-block">All</a>
    @foreach (string t in Model)
            {
                <a asp-controller="Home" asp-action="Index" asp-route-selectedTeam="@t" class="btn btn-block @(ViewBag.Selected == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
            }
    <br />
</div>
